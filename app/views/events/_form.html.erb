<div class="form-horizontal">
	<%= form_for @event do |f| %>
		<div class="form-group">
			<%= f.label :name, class: "col-sm-2 control-label" %>
			<div class="col-sm-4">
				<%= f.text_field :name, class: "form-control", placeholder: "Enter a name for the event" %>
			</div>
		</div>
		<div>
			<%= f.text_field :creator_id, style: "#{'display:none'}" %>
			<%= f.text_field :creator, style: "#{'display:none'}" %>
		</div>
		<div class="form-group">
			<%= f.label :number_in_attendance, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :number_in_attendance, class: "form-control", placeholder: "Enter the number of people going" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :number_males_attending, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :number_males_attending, class: "form-control", placeholder: "Enter number of males attending" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :number_females_attending, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :number_females_attending, class: "form-control", placeholder: "Enter number of females going" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :price, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :price, class: "form-control", placeholder: "Enter price of event" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :venue_name, class: "col-sm-2 control-label" %>
			<div class="col-sm-4">
				<%= f.text_field :venue_name, class: "form-control", placeholder: "Enter venue name" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :duration, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :duration, class: "form-control", placeholder: "Enter duration of event" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :calendar_date, class: "col-sm-2 control-label" %>
			<div class="col-sm-4">
				<%= f.text_field :calendar_date, class: "form-control", placeholder: "Enter date of event" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :street_address, class: "col-sm-2 control-label" %>
			<div class="col-sm-4">
				<%= f.text_field :street_address, class: "form-control", placeholder: "Enter the street address" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :city, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :city, class: "form-control", placeholder: "Enter the city" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :state, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :state, class: "form-control", placeholder: "Enter the state" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :zip_code, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :zip_code, class: "form-control", placeholder: "Enter the zip code" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :host_name, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :host_name, class: "form-control", placeholder: "Enter the host's name" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :event_type, class: "col-sm-2 control-label" %>
			<div class="col-sm-2">
				<%= f.text_field :event_type, class: "form-control", placeholder: "Enter the event type" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :make_private, nil, class: "col-sm-2 control-label", :hidden => true %>
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<label>
						<%= f.check_box :private_view, :checked => :false %>Make Private
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-4">
				<%= f.submit 'Submit', class: "btn btn-primary btn-large btn-block" %>
			</div>
		</div>
	<% end %>
</div>