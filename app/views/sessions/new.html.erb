<div class="container-fluid">
	<h2>Login</h2>
	<div class="form-horizontal">
		<%= form_tag sessions_path id: 'login' do %>
			<div class="form-group">
				<p><%= flash[:login_error] %></p>
			</div>

			<div class="form-group" >
				<%= label_tag :email, nil, class: "col-sm-2 control-label" %>
				<div class="col-sm-4">
					<%= text_field_tag :email, nil, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :password, nil, class: "col-sm-2 control-label" %>
				<div class="col-sm-4">
					<%= password_field_tag :password, nil, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag :remember_me, nil, class: "col-sm-2 control-label", :hidden => true %>
				<div class="col-sm-offset-2 col-sm-10">
					<div class="checkbox">
						<label>
							<%= check_box_tag "session", "value", false %>Remember me
						</label>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-4">
					<%= submit_tag 'Log In', class: "btn btn-primary btn-large btn-block" %>
				</div>
			</div>
		<% end %>
	</div>
</div>